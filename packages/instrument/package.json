{
  "name": "@scanwarp/instrument",
  "version": "0.3.0",
  "description": "Zero-config OpenTelemetry auto-instrumentation for Node.js apps monitored by ScanWarp",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "opentelemetry",
    "instrumentation",
    "monitoring",
    "tracing",
    "scanwarp"
  ],
  "author": "ScanWarp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/scanwarp/scanwarp.git",
    "directory": "packages/instrument"
  },
  "bugs": {
    "url": "https://github.com/scanwarp/scanwarp/issues"
  },
  "homepage": "https://scanwarp.com",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@opentelemetry/api": "~1.7.0",
    "@opentelemetry/sdk-node": "~0.48.0",
    "@opentelemetry/sdk-metrics": "~1.21.0",
    "@opentelemetry/sdk-trace-base": "~1.21.0",
    "@opentelemetry/exporter-trace-otlp-http": "~0.48.0",
    "@opentelemetry/exporter-metrics-otlp-http": "~0.48.0",
    "@opentelemetry/resources": "~1.21.0",
    "@opentelemetry/semantic-conventions": "~1.21.0",
    "@opentelemetry/auto-instrumentations-node": "~0.43.0",
    "@opentelemetry/instrumentation": "~0.48.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  }
}
